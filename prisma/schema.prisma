// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String?   @unique
  emailVerified        DateTime?
  image                String?
  hashedPassword       String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Verification fields
  verificationSessionId String?   @unique
  verificationStatus    String?   @default("UNVERIFIED") // UNVERIFIED, PENDING, VERIFIED, FAILED
  verificationError     String?
  verifiedAt           DateTime?
  
  // Role and type
  role                 String    @default("USER") // USER, AGENT, ADMIN
  userType             String?   // LANDLORD, TENANT, AGENT, BUSINESS
  
  // Agent specific fields
  agentLicense         String?
  agentBrokerage       String?
  serviceAreas         String[]  // Array of postcodes/areas
  
  // Relationships
  accounts             Account[]
  listings             Listing[]
  messages             Message[]
  conversations        Conversation[]
  properties           Property[]
  privateListings      PrivateListing[] // Properties submitted to private marketplace
  agentInterests       AgentInterest[]  // Agent's interest in private listings
  referrals            Referral[]       // Referrals received
  referralsGiven       Referral[]       @relation("ReferringAgent")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  price       Float
  location    String
  postcode    String   // For area matching
  type        String   // HOUSE, APARTMENT, COMMERCIAL, etc.
  status      String   // AVAILABLE, PENDING, SOLD, RENTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Media
  images      String[] // Array of image URLs
  
  // Relationships
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listings    Listing[]
  privateListing PrivateListing?

  @@map("properties")
}

model PrivateListing {
  id            String   @id @default(cuid())
  status        String   // PENDING, ASSIGNED, COMPLETED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Property details
  propertyId    String   @unique
  property      Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  // Owner details
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  // Agent assignment
  assignedAgentId String?
  commission      Float?  // Agreed commission rate
  
  // Agent interests
  agentInterests  AgentInterest[]

  @@map("private_listings")
}

model AgentInterest {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  
  // Relationships
  privateListing  PrivateListing @relation(fields: [privateListingId], references: [id])
  privateListingId String
  
  // Agent details
  agentId        String
  agent          User    @relation(fields: [agentId], references: [id])
  
  // Interest details
  proposedCommission Float
  message           String?
  status            String   // PENDING, ACCEPTED, REJECTED

  @@map("agent_interests")
}

model Referral {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  status          String   // PENDING, COMPLETED
  commission      Float    // 20% of the original commission
  
  // Relationships
  agentId         String   // Agent receiving referral
  agent           User     @relation(fields: [agentId], references: [id])
  
  referringAgentId String  // Agent giving referral
  referringAgent   User    @relation("ReferringAgent", fields: [referringAgentId], references: [id])
  
  privateListingId String?
  notes           String?

  @@map("referrals")
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  price       Float
  type        String   // SALE, RENT, SERVICE
  status      String   // ACTIVE, PENDING, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationships
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  propertyId  String?
  property    Property? @relation(fields: [propertyId], references: [id])

  @@map("listings")
}

model Message {
  id             String       @id @default(cuid())
  content        String       @db.Text
  createdAt      DateTime     @default(now())
  
  // Relationships
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Conversation {
  id        String    @id @default(cuid())
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relationships
  users     User[]
  messages  Message[]

  @@map("conversations")
}